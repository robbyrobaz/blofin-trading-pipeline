[Unit]
Description=Blofin Stack Phase 2 A/B Model Evaluation
After=network.target

[Service]
Type=oneshot
WorkingDirectory=%h/.openclaw/workspace/blofin-stack
Environment="BLOFIN_WORKSPACE=%h/.openclaw/workspace/blofin-stack"
Environment="PYTHONPATH=%h/.openclaw/workspace/blofin-stack"
ExecStart=%h/.openclaw/workspace/blofin-stack/cron_ab_evaluate.sh
StandardOutput=append:%h/.openclaw/workspace/blofin-stack/logs/phase2_retrain.log
StandardError=append:%h/.openclaw/workspace/blofin-stack/logs/phase2_retrain.log

# Resource limits
TimeoutSec=30m
MemoryMax=2G
CPUQuota=200%

# Restart policy
Restart=no

[Install]
WantedBy=default.target
