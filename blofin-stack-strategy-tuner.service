[Unit]
Description=Blofin Stack Strategy Tuner (LLM-guided parameter tuning)
After=network.target

[Service]
Type=oneshot
WorkingDirectory=%h/.openclaw/workspace/blofin-stack
Environment="BLOFIN_WORKSPACE=%h/.openclaw/workspace/blofin-stack"
Environment="PYTHONPATH=%h/.openclaw/workspace/blofin-stack"
ExecStart=%h/.openclaw/workspace/blofin-stack/.venv/bin/python3 orchestration/run_strategy_tuner.py
StandardOutput=append:%h/.openclaw/workspace/blofin-stack/data/strategy_tuner.log
StandardError=append:%h/.openclaw/workspace/blofin-stack/data/strategy_tuner.log

# Resource limits
TimeoutSec=1h
MemoryMax=1G
CPUQuota=100%

# Restart policy
Restart=no

[Install]
WantedBy=default.target
